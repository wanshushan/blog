---

import { getCollection, getEntry, render } from "astro:content";
import Giscus from "@components/misc/Giscus.astro";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";

const friendsPosttop = await getEntry("spec", "friendstop");
const friendsPostbottom = await getEntry("spec", "friendsbottom");
const specEntries = await getCollection("spec");
const friendsConfig =
    specEntries.find((entry) => entry.id === "friends_config") ??
    specEntries.find((entry) => entry.id === "friends_config.json") ??
    specEntries.find((entry) => entry.id.startsWith("friends_config."));

if (!friendsConfig) {
    const specIds = specEntries.map((entry) => entry.id).join(", ");
    console.warn(
        `[friends] Friends config not found in collection "spec". Tried: friends_config / friends_config.json / friends_config.*. Available entries: ${specIds || "(none)"}`,
    );
}

if (!friendsPosttop) {
	throw new Error("Friends top page content not found");
}

if (!friendsPostbottom) {
	throw new Error("Friends bottom page content not found");
}

const { Content: Top } = await render(friendsPosttop);
const { Content: Bottom } = await render(friendsPostbottom);
const items = friendsConfig?.data.friends ?? [];
